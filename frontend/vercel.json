{
    "version": 2,
    "name": "pure-pleasure-frontend",
    "builds": [
        {
        "src": "*.html",
        "use": "@vercel/static"
        },
        {
        "src": "**/*.js",
        "use": "@vercel/static"
        },
        {
        "src": "**/*.css", 
        "use": "@vercel/static"
        }
    ],
    "routes": [
        {
        "src": "/(.*)",
        "dest": "/index.html"
        }
    ],
    "headers": [
        {
        "source": "/(.*)",
        "headers": [
            {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
            }
        ]
        }
    ]
}